# Environment variables for Secure Notes Application
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Flask environment (development, production, testing)
FLASK_ENV=development

# Secret key for session signing
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this

# Database URL (leave empty for default SQLite)
# For PostgreSQL: postgresql://user:pass@localhost/dbname
DATABASE_URL=
SQLALCHEMY_DATABASE_URI=instance

# Session cookie settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# Encryption settings
# Master key for encrypting note content (32 bytes or 44 chars base64)
# Generate with: python -c "from app.crypto import generate_master_key; print(generate_master_key())"
ENCRYPTION_MASTER_KEY=

# Rate limiting settings
RATE_LIMIT_PER_IP=True
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_SECONDS=300

# Audit logging settings
AUDIT_LOG_ENABLED=True
AUDIT_LOG_FILE=logs/security_audit.log
AUDIT_LOG_LEVEL=INFO
